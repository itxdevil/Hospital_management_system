@{
    Layout = null;
}
@model List<WebApplication1.Models.Doctor>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Select</title>
    <style>
        * {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),linear-gradient(#ddd6f3, #faaca8);
            background-size: 500px 1000px;
            height: 100%;
        }

        .header {
            width: 100.91%;
            background-color: black;
            margin-top: -0.5%;
            height: 80px;
            margin-left: -0.5%;
        }

        .text {
            font-size: 30px;
            text-align: center;
            margin-top: -3%;
            height: 40px;
            color: white;
        }

        .text2 {
            margin-top: 5%;
            font-size: 30px;
            color: white;
            margin-left: 10%;
        }

        .T {
            margin-left: auto;
            margin-right: auto;
        }

        table, th {
            border: 2px solid white;
            border-collapse: collapse;
            padding: 10px;
            font-size: 20px;
            font-weight: bold;
            color: white;
        }

        td {
            border: 2px solid white;
            border-collapse: collapse;
            padding: 5px;
            padding-top: 10px;
            padding-bottom: 10px;
            font-size: 20px;
            font-weight: normal;
            color: white;
            background-color: black;
        }

        table {
            width: 80%;
        }

        th {
            background-color: black;
            padding-top: 15px;
            padding-bottom: 15px;
            width: 2%;
        }

        button {
            padding: 5px;
            padding-top: 15px;
            padding-bottom: 15px;
            font-size: 18px;
            width: 8%;
            margin-top: 2%;
            margin-left: 82%;
        }

            button:hover {
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="header">
    </div>
    <p class="text">Delete Form</p>
    <p class="text2">Information : </p>
    <div>
        <table class="T">
            <tr>
                <th>
                    id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Experience
                </th>
                <th>
                    Password
                </th>
                <th>
                    Age
                </th>
                <th>
                   Room_number
                </th>

                <th>
                    Delete
                </th>
            </tr>
            @foreach (var items in Model)
            {
                <tr>
                    <td>
                        @items.Doctor_Name
                    </td>
                    <td>
                        @items.Doctor_Id
                    </td>
                    <td>
                        @items.Doctor_Experience
                    </td>
                    <td>
                        @items.Doctor_Password
                    </td>
                    <td>
                        @items.Doctor_Age
                    </td>
                    <td>
                        @items.Doctor_Room_Number
                    </td>
                    <td>
                        @Html.ActionLink("Delete Data", "Delete", new { Doctor_Id = items.Doctor_Id })
                    </td>
                </tr>
            }
        </table>
    </div>
    <a href="Main"><button type="button">Back</button></a>
</body>
</html>