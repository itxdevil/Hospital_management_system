@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertInfo</title>
    <style>
        * {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)),linear-gradient(#ddd6f3, #faaca8);
            background-size: 500px 1000px;
            height: 100%;
        }

        .header {
            width: 100.91%;
            background-color: black;
            margin-top: -0.5%;
            height: 80px;
            margin-left: -0.5%;
        }

        .text {
            font-size: 30px;
            text-align: center;
            margin-top: -3%;
            height: 40px;
            color: white;
        }

        .form {
            margin-top: 5%;
            border: 5px solid black;
            width: 30%;
            margin-left: 34.5%;
            border-radius: 25px;
            height: 550px;
        }

        .head {
            margin-top: -6%;
            margin-left: 15%;
            font-size: 32px;
        }

        form {
            margin-left: 5%;
            margin-top: 5%;
            padding-top: 20px;
            padding-bottom: 20px;
            width: 100%;
        }

        label {
            margin-top: -1%;
            margin-left: 8%;
            float: left;
            font-size: 25px;
            color: white;
        }

        input {
            margin-top: -1%;
            margin-right: 20%;
            width: 40%;
            padding: 7px;
            border-style: none;
            font-size: 16px;
            float: right;
            background: transparent;
            border: none;
            border: 2px solid black;
        }

            input[type=text]:focus {
                border-style: none;
                border: 2px solid black;
                outline: none;
            }

        button {
            padding: 5px;
            padding-top: 15px;
            padding-bottom: 15px;
            font-size: 18px;
            width: 20%;
            margin-left: 15%;
        }

            button:hover {
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="header">
    </div>
    <p class="text">Patient Treatment</p>
    <div class="form">
        <form action="InsertInfo" method="post">
            <label>Patiet Id:</label>
            <input type="text" name="patient_id" placeholder="eg 123" />
            <br />
            <br />
            <br />
            <label>Disease:</label>
            <input type="text" name="disease" placeholder="eg abc" />
            <br />
            <br />
            <br />
            <label>Prescription : </label>
            <input type="text" name="prescription" placeholder="eg 20" />
            <br />
            <br />
            <br />
            <label>Medicines </label>
            <input type="text" name="medicines" placeholder="eg Male or Female" />
            <br />
            <br />
            <br />
          
            <button type="submit">Submit</button>
            
        </form>
    </div>
</body>
</html>
